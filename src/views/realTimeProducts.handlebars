{{!< layouts/main}} <h1>Real Time Products (WebSockets)</h1>
    <p class="muted">Al crear o borrar, esta lista se actualiza autom√°ticamente.</p>

    <div class="row">
        <div class="card" style="flex:1; min-width:320px">
            <h2>Crear producto</h2>
            <form id="createForm">
                <input name="title" placeholder="title" required />
                <input name="description" placeholder="description" required />
                <input name="code" placeholder="code" required />
                <input name="price" type="number" step="0.01" placeholder="price" required />
                <input name="stock" type="number" placeholder="stock" required />
                <input name="category" placeholder="category" required />
                <input name="thumbnails" placeholder="thumbnails (sep. por coma)" />
                <label><input type="checkbox" name="status" checked /> status</label>
                <button type="submit">Crear</button>
            </form>
            <div id="createMsg" class="muted"></div>
        </div>

        <div class="card" style="flex:1; min-width:320px">
            <h2>Eliminar producto</h2>
            <form id="deleteForm">
                <input name="id" placeholder="id del producto" required />
                <button type="submit">Eliminar</button>
            </form>
            <div id="deleteMsg" class="muted"></div>
        </div>
    </div>

    <hr />

    <h2>Listado</h2>
    <div id="list"></div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/realtime.js"></script>